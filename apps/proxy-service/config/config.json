{
  "upstreams": [
    {
      "name": "backend_servers",
      "balancer": "round-robin",
      "servers": [
        {
          "url": "http://127.0.0.1:3000",
          "weight": 1,
          "headers": {
            "add": {
              "X-Proxy-By": "njs-proxy",
              "X-Real-IP": "${remote_addr}"
            },
            "remove": [
              "X-Powered-By"
            ]
          }
        },
        {
          "url": "http://scu.edu.cn",
          "weight": 1,
          "backup": true
        }
      ],
      "healthCheck": {
        "type": "http",
        "path": "/",
        "interval": 1000,
        "timeout": 2000,
        "retries": 2,
        "allowInsecure": true,
        "expectedStatus": [200, 201, 202, 301, 302, 303, 307, 308, 404]
      }
    }
  ],
  "servers": [
    {
      "name": "defaultA",
      "listen": 9000,
      "serverName": [
        "wm-proxy.com"
      ],
      "locations": [
        {
          "path": "/",
          "upstream": "backend_servers",
          "proxyTimeout": 5000,
          "proxyBuffering": true
        }
      ]
    },
    {
      "name": "toscueducn",
      "listen": 9001,
      "serverName": [
        "toscueducn.com"
      ],
      "locations": [
        {
          "path": "/",
          "upstream": "backend_servers",
          "proxyTimeout": 5000,
          "proxyBuffering": true
        }
      ]
    }
  ],
  "logging": {
    "level": "debug",
    "file": "./logs/access.log"
  },
  "monitoring": {
    "enabled": true,
    "wsPort": 3001,
    "pushInterval": 5000,
    "metrics": [
      "cpuUsage",
      "memoryUsage",
      "serverMetrics"
    ]
  }
}